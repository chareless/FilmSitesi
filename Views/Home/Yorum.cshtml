@model FilmSitesi.Models.AllData
<!-- Anime Section Begin -->
@foreach (var item in Model.Product)
{
    <section class="anime-details spad">
        <div class="container">
            <div class="anime__details__content">
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <div class="anime__details__review">
                        <div class="section-title">
                            <h5>Yorumlar</h5>
                        </div>
                        @foreach (var items in Model.Yorum)
                        {
                            <div class="anime__review__item">
                                <div class="anime__review__item__text">
                                    <h6>
                                        @items.User.isim - (@items.User.UserName)
                                        @if (User.Identity.IsAuthenticated && items.User.Id == User.Identity.Name || User.IsInRole("Admin"))
                                        {
                                            <a asp-controller="Yorums" asp-action="Delete" asp-route-id="@items.id">Yorumu Sil </a>

                                        }
                                    </h6>
                                    <p>
                                        @items.icerik
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                <div class="anime__details__form">
                    <div class="section-title">
                        <h5>Yorumunuz</h5>
                    </div>

                    @foreach (var items in Model.User)
                    {
                        if (items.UserName == User.Identity.Name)
                        {
                            <form asp-controller="Home" asp-action="Icerik">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="yorum.userId" value="@items.Id" class="form-control" disabled />
                                    <input asp-for="yorum.productId" value="@item.id" class="form-control" disabled />
                                    <textarea asp-for="yorum.icerik" placeholder="Your Comment"></textarea>
                                </div>
                                <button type="submit"><i class="fa fa-location-arrow"></i>Yorum Yap</button>
                            </form>
                          
                        }

                    }


                </div>
                    }

                </div>
            </div>
        </div>
    </section>
}
<!-- Anime Section End -->